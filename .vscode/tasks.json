{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "C/C++: g++ 활성 파일 빌드",
			"command": "g++",
			"args": [
				"-fdiagnostics-color=always",
				"-g",
				"${file}",
				"-o",
				"${fileDirname}\\${fileBasenameNoExtension}.exe"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"detail": "컴파일러: C:\\mingw64\\bin\\g++.exe"
		},
		{
			"label": "execute",
			"command": "cmd",
			"group": "test",
			"args": [
				"/C",
				"${fileDirname}\\${fileBasenameNoExtension}"
			]
		}
	]
}